<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sarahbrazauskas.mywebviewer.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:columnCount="2"
        android:useDefaultMargins="true"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textViewWebViewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:text="@string/textViewWebViewer"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewUcsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="@string/textViewUcsd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"
            tools:layout_editor_absoluteY="107dp" />

        <Button
            android:id="@+id/buttonUcsdGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:background="@android:color/holo_blue_light"
            android:text="@string/buttonUcsd"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewYahoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:text="@string/textViewYahoo"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonYahooGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:background="@android:color/holo_green_light"
            android:text="@string/buttonYahoo"
            android:textSize="18sp" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
